package  {	import flash.events.Event;	import flash.display.MovieClip;		public class Soldier extends Person{		var shootingRange : int;		var shootingRate : int;		var damage : int;		var auxRate: int = 0;		var destX: int;		var destY: int;		var bulletList: Array = [];		var locationRange : MovieClip = new MovieClip();			public function Soldier(game : Main, map : Map) {			this.game = game;			this.map = map;			this.health = 1;			game.addEventListener(Event.ENTER_FRAME, loop);		}				public function loop (evt:Event) {						var target;			var onTarget;						if(!this.isDead()) {				auxRate++;				if (auxRate == shootingRate){					shootBullet();					auxRate = 0;				}			}			 			if(bulletList.length > 0){            	for(var i:int = bulletList.length-1; i >= 0; i--){                	if((target = inRange()) == null) {												onTarget = bulletList[i].loop(this.rotation);										} else {						this.destX = target.x;						this.destY = target.y;												rotatePlayer();												onTarget = bulletList[i].loop(Math.atan2(destY - this.y, destX - this.x)/ (Math.PI / 180) + 90);					}										if(onTarget) {						if(map.scientist.isDead()) {							map.endGame();						} else {							bulletList.splice(i, 1);						}					}					            	}        	}		 }		 		 public function inRange() : Zombie {			 			 for(var i = 0; i < map.zombies.length; i++) {				 if (locationRange.hitTestObject(map.zombies[i])){					return map.zombies[i];				}			 }			 			 return null;		 }		 		 public function enableTargetLocation() {			 locationRange.graphics.drawCircle(this.x, this.y, 200);			 game.addChild(locationRange);		 }		 		 public function rotatePlayer() : void {			var radians:Number = Math.atan2(destY - this.y, destX - this.x);            var degrees:Number = radians / (Math.PI / 180) + 90;            this.rotation = degrees;        }		 		 public function shootBullet(){			 var bullet: Bullet1 = new Bullet1(game,map,this.x + (this.width/2),this.y,this.rotation +90, this.damage);			 bulletList.push(bullet);			 game.addChild(bullet);		 }		public function removeListeners() {			game.removeEventListener(Event.ENTER_FRAME, loop);		}	}	}