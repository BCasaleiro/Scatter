package  {	import flash.events.Event;		public class Soldier extends Person{		var shootingRange : int;		var shootingRate : int;		var damage : int;		var auxRate: int = 0;		var destX: int;		var destY: int;		var bulletList: Array = []			public function Soldier(game : Main, map : Map) {			this.game = game;			this.map = map;			this.health = 1;			game.addEventListener(Event.ENTER_FRAME, loop);		}				public function loop (evt:Event) {						 if(!this.isDead()) {				 auxRate++;				 if (auxRate == shootingRate){					shootBullet();					auxRate = 0;				 }			 }			 			 if(bulletList.length > 0){            	for(var i:int = bulletList.length-1; i >= 0; i--){                	if(bulletList[i].loop()) {						if(map.scientist.isDead()) {							game.removeEventListener(Event.ENTER_FRAME, loop);							game.clean();							var intro = new Intro(game, true);							game.x = 0;							game.y = 0;						} else {							bulletList.splice(i, 1);						}					}            	}        	}		 }		 		 public function rotatePlayer() : void {			var radians:Number = Math.atan2(destY - this.y, destX - this.x);            var degrees:Number = radians / (Math.PI / 180) - 90;            this.rotation = degrees;        }		 		 public function shootBullet(){			 var bullet: Bullet1 = new Bullet1(game,map,this.x + (this.width/2),this.y,this.rotation +90, this.damage);			 bulletList.push(bullet);			 game.addChild(bullet);		 }	}	}