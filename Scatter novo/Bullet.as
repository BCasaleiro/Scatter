package {		import flash.display.MovieClip;			public class Bullet extends MovieClip {		var game : Main;		var map : Map;		var speed: int;		var xVel: int;		var yVel: int;		var rotationInRadians: int = 0;						public function Bullet(game : Main, map : Map, x: int, y: int) {			this.game = game;			this.map = map;			this.x = x;			this.y = y;			}		public function loop():void //we don't need to include the "e:Event" because we aren't using an EventListener    	{        	for(var b=0; b<this.map.zombies.length; ++b)        	{	            	if(map.zombies[b].hitTestObject(this)){               		trace("bullet hit baddie " + b);               		game.removeChild(this);               	}        	}       		xVel = Math.cos(rotationInRadians) * speed; //uses the cosine to get the xVel from the speed and rotation        	yVel = Math.sin(rotationInRadians) * speed; //uses the sine to get the yVel        	this.x += xVel; //updates the position        	this.y += yVel;        	//if the bullet goes off the edge of the screen...        	if(x > game.width || x < 0 || y > game.height || y < 0)        	{            	this.parent.removeChild(this); //remove the bullet        	}    	}			}	}