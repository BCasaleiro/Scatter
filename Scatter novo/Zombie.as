package  {		import flash.display.MovieClip;	import flash.media.Sound;	import flash.events.Event; 	import flash.net.URLRequest; 		public class Zombie extends Person{		var perception : int;		var constX : int;		var constY : int;		var aux : MovieClip = new MovieClip();		public function Zombie(game : Main, map : Map) {			this.game = game;			this.map = map;			this.mouseEnabled = false;		}				public function updatePosition(destX : int, destY : int) {			destX = destX + constX;			destY = destY + constY;			if(destX != Math.round(this.x) && destX != 0 && destY != Math.round(this.y) && destX != 0 && !hittest(destX, destY)) {				this.x = this.x +  + Math.cos((Math.atan2(destY - y, destX - x) / Math.PI * 180)/180*Math.PI)*speed;				this.y = this.y +  + Math.sin((Math.atan2(destY - y,destX - x) / Math.PI * 180)/180*Math.PI)*speed;			}		}				public function hitSoldier(destX : int, destY : int) {			var aux : MovieClip = new MovieClip();			aux.graphics.drawCircle(this.x+(4*Math.cos((Math.atan2(destY - y, destX - x) / Math.PI * 180)/180*Math.PI)*speed) , this.y + (4*Math.sin((Math.atan2(destY - y,destX - x) / Math.PI * 180)/180*Math.PI)*speed), this.width/4);			game.addChild(aux);						for (var i = 0; i < map.soldiers.length; i++) {				if (aux.hitTestObject(map.soldiers[i])){					map.soldiers[i].health -= 1;										soundHandler();										for(var k = 0; k < map.soldiers[i].bulletList.length; k++) {						if(game.contains(map.soldiers[i].bulletList[k])) {							game.removeChild(map.soldiers[i].bulletList[k]);						}					}										game.removeChild(map.soldiers[i]);										game.removeChild(aux);					return true;				}			}			game.removeChild(aux);		}				public function soundHandler():void		{			var sound : ZombieSound = new ZombieSound();			sound.play(0, 0, game.sound);		}						public function hittest(destX : int, destY : int) {			var aux : MovieClip = new MovieClip();			aux.graphics.drawCircle(this.x+(4*Math.cos((Math.atan2(destY - y, destX - x) / Math.PI * 180)/180*Math.PI)*speed) , this.y + (4*Math.sin((Math.atan2(destY - y,destX - x) / Math.PI * 180)/180*Math.PI)*speed), this.width/4);			game.addChild(aux);						for (var i = 0; i < map.objects.length; i++) {				if (aux.hitTestObject(map.objects[i])){					game.removeChild(aux);					return true;				}			}			game.removeChild(aux);		}	}	}