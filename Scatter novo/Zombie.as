package  {		import flash.display.MovieClip;		public class Zombie extends Person{		var perception : int;		var constX : int;		var constY : int;		public function Zombie(game : Main, map : Map) {			this.game = game;			this.map = map;			this.speed = 2;			this.mouseEnabled = false;		}				public function updatePosition(destX : int, destY : int) {			destX = destX + constX;			destY = destY + constY;			if(destX != Math.round(this.x) && destX != 0 && destY != Math.round(this.y) && destX != 0 && !hittest(destX, destY)) {				this.x = this.x +  + Math.cos((Math.atan2(destY - y, destX - x) / Math.PI * 180)/180*Math.PI)*speed;				this.y = this.y +  + Math.sin((Math.atan2(destY - y,destX - x) / Math.PI * 180)/180*Math.PI)*speed;			}		}				public function hitSoldier(destX : int, destY : int) {			var aux : MovieClip = new MovieClip();			aux.graphics.drawCircle(this.x+(4*Math.cos((Math.atan2(destY - y, destX - x) / Math.PI * 180)/180*Math.PI)*speed) , this.y + (4*Math.sin((Math.atan2(destY - y,destX - x) / Math.PI * 180)/180*Math.PI)*speed), this.width/4);			game.addChild(aux);						for (var i = 0; i < map.soldiers.length; i++) {				if (aux.hitTestObject(map.soldiers[i])){					game.removeChild(map.soldiers[i]);										map.soldiers.concat( map.soldiers.slice( 0, map.soldiers.indexOf(map.soldiers[i]) ), map.soldiers.slice( map.soldiers.indexOf( map.soldiers[i] ) + 1, map.soldiers.length ) );										return true;				}			}		}				public function hittest(destX : int, destY : int) {			var aux : MovieClip = new MovieClip();			aux.graphics.drawCircle(this.x+(4*Math.cos((Math.atan2(destY - y, destX - x) / Math.PI * 180)/180*Math.PI)*speed) , this.y + (4*Math.sin((Math.atan2(destY - y,destX - x) / Math.PI * 180)/180*Math.PI)*speed), this.width/4);			game.addChild(aux);						for (var i = 0; i < map.objects.length; i++) {				if (aux.hitTestObject(map.objects[i])){					return true;				}			}		}	}	}